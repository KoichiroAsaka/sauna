<div class="container mt-5">
  <h2 class="text-center mb-4 text-white">お気に入りサウナ一覧</h2>

  <% if @favorites.any? %>
    <ul class="list-group shadow-sm" style="background: rgba(255, 255, 255, 0.15); border-radius: 10px;">
      <% @favorites.each do |favorite| %>
        <li class="list-group-item d-flex justify-content-between align-items-center" 
            style="background: rgba(255, 255, 255, 0.3); border: none;">
          <%= link_to favorite.sauna.name, sauna_path(favorite.sauna), class: "text-white text-decoration-none" %>
          <%= button_to "解除", favorite_path(favorite), method: :delete, class: "btn btn-outline-light btn-sm" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="alert alert-info mt-4" style="background: rgba(255, 255, 255, 0.2); border: none; color: white;">
      お気に入り登録したサウナはまだありません。
    </div>
  <% end %>
</div>
