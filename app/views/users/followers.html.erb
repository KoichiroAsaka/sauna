<div class="container mt-5">
  <div class="card outer-wrapper shadow-lg p-4">
    <h2 class="text-center mb-4">フォロワー一覧</h2>

    <% if @users.any? %>
      <div class="row">
        <% @users.each do |user| %>
          <div class="col-md-4 col-sm-6 mb-4 d-flex justify-content-center">
            <div class="card text-center shadow-sm" style="width: 16rem;">
              
              <% if user.profile_image.attached? %>
                <%= link_to image_tag(user.profile_image, class: "card-img-top rounded-circle mx-auto mt-3", style: "width: 100px; height: 100px; object-fit: cover;"), profile_user_path(user) %>
              <% else %>
                <%= link_to image_tag("default-avatar.png", class: "card-img-top rounded-circle mx-auto mt-3", style: "width: 100px; height: 100px; object-fit: cover;"), profile_user_path(user) %>
              <% end %>

              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to user.name, profile_user_path(user), class: "text-decoration-none" %>
                </h5>

                <p class="post-count mb-2">
                  投稿数：<%= user.posts.count %>
                </p>

                <% if current_user != user %>
                  <% if current_user.following?(user) %>
                    <%= button_to "フォロー解除", relationship_path(user_id: user.id), method: :delete, class: "btn btn-outline-primary btn-sm w-75" %>
                  <% else %>
                    <%= button_to "フォローする", relationships_path(user_id: user.id), method: :post, class: "btn btn-outline-primary btn-sm w-75" %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center">フォロワーはいません。</p>
    <% end %>
  </div>
</div>
