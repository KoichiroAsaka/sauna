<div class="container mt-5">
  <div class="card shadow-lg border-0">
    <div class="card-header text-center bg-primary text-white">
      <h2 class="mb-0"><%= @sauna.name %> の投稿詳細</h2>
    </div>

    <div class="card-body p-4">
      <p><strong>投稿者：</strong> <%= @post.user.name %></p>
      <p><strong>内容：</strong> <%= @post.post %></p>

      <hr>

      <!-- 新規投稿ボタン -->
      <p>
        <%= link_to "このサウナに投稿する", new_sauna_post_path(@sauna), class: "btn btn-primary" %>
      </p>

      <div class="mt-3 text-center">
        <%= link_to "サウナ詳細に戻る", sauna_path(@sauna), class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
