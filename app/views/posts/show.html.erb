<div class="container mt-5">
  <div class="card shadow-lg border-0">
    <div class="card-header text-center bg-primary text-white">
      <h2 class="mb-0"><%= @sauna.name %> の投稿詳細</h2>
    </div>

    <div class="card-body p-4">
      <p><strong>投稿者：</strong> <%= @post.user.name %></p>
      <p><strong>内容：</strong> <%= @post.post %></p>

      <!-- ✅ 画像がある場合のみ表示 -->
      <% if @post.image.attached? %>
        <div class="text-center mt-3">
          <%= image_tag @post.image, class: "img-fluid rounded shadow-sm", style: "max-width: 80%; height: auto;" %>
        </div>
      <% end %>

      <hr>

      <!-- 編集＆削除ボタン -->
      <% if @post.user == current_user %>
        <div class="d-flex gap-2 mt-3">
          <%= link_to "編集する", edit_sauna_post_path(@sauna, @post), class: "btn btn-outline-primary" %>

          <%= link_to "削除する",
                      sauna_post_path(@sauna, @post),
                      data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                      class: "btn btn-outline-danger" %>
        </div>
      <% end %>

