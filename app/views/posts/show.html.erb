<div class="post-show-wrapper">
  <h2 class="post-title"><%= @sauna.name %></h2>

  <div class="post-card">
    
    <p>
      <strong>投稿者：</strong>
      <%= link_to @post.user.name, user_path(@post.user),
                  class: "text-decoration-none fw-bold text-primary" %>
    </p>

    <p><strong>内容：</strong> <%= @post.post %></p>

    <ul class="list-unstyled mt-3">
      <li><strong>混雑度：</strong> <%= I18n.t("enums.post.congestion_level.#{@post.congestion_level}") %></li>
      <li><strong>曜日：</strong> <%= I18n.t("enums.post.day_of_week.#{@post.day_of_week}") %></li>
      <li><strong>時間帯：</strong> <%= I18n.t("enums.post.time_zone.#{@post.time_zone}") %></li>
    </ul>

    <% if @post.image.attached? %>
      <div class="text-center mt-4">
        <%= image_tag @post.image,
                      class: "img-fluid rounded shadow-sm",
                      style: "max-width: 100%; height: auto;" %>
      </div>
    <% end %>

    <% if @post.user == current_user %>
      <div class="text-end mt-4 edit-buttons">
        <%= link_to "編集する", edit_sauna_post_path(@sauna, @post),
                    class: "btn btn-outline-primary btn-sm" %>
        <%= link_to "削除する",
                    sauna_post_path(@sauna, @post),
                    data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                    class: "btn btn-outline-danger btn-sm" %>
      </div>
    <% end %>

    <div class="mt-4 text-center d-flex justify-content-center gap-3">
      <%= link_to "一覧に戻る", sauna_posts_path(@sauna), class: "btn btn-secondary" %>
      <%= link_to "サウナ詳細へ", sauna_path(@sauna), class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>
