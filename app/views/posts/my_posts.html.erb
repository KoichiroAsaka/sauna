<div class="container mt-5">
  <h2 class="text-center text-white mb-4">あなたの投稿一覧</h2>

  <% if @posts.any? %>
    <div class="row g-4">
      <% @posts.each do |post| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="post-item-card p-3 rounded">
            <p><strong>サウナ：</strong> <%= post.sauna.name %></p>
            <p><strong>内容：</strong> <%= truncate(post.post, length: 80) %></p>
            <%= link_to "詳細", sauna_post_path(post.sauna, post), class: "btn btn-sm btn-outline-light" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-muted">まだ投稿がありません。</p>
  <% end %>
</div>
