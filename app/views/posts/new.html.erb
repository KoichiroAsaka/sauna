<h2>新規投稿</h2>

<%= form_with(model: @post, local: true) do |form| %>

  <!-- サウナ選択 -->
  <div class="field">
    <%= form.label :sauna_id, "対象サウナ" %><br>
    <%= form.select :sauna_id,
      Sauna.all.map { |s| ["#{s.prefecture}：#{s.name}", s.id] },
      { prompt: "サウナを選択" } %>
  </div>

  <!-- 投稿内容 -->
  <div class="field">
    <%= form.label :post, "投稿内容" %><br>
    <%= form.text_area :post, rows: 5 %>
  </div>

  <!-- 混雑度 -->
  <div class="field">
    <%= form.label :congestion_level, "混雑度" %><br>
    <%= form.select :congestion_level,
      [["★", 1], ["★★", 2], ["★★★", 3], ["★★★★", 4], ["★★★★★", 5]],
      { prompt: "選択してください" } %>
  </div>

  <!-- 曜日 -->
  <div class="field">
    <%= form.label :day_of_week, "曜日" %><br>
    <%= form.select :day_of_week,
      [["月", 1], ["火", 2], ["水", 3], ["木", 4], ["金", 5], ["土", 6], ["日", 0]],
      { prompt: "選択してください" } %>
  </div>

  <!-- 時間帯 -->
  <div class="field">
    <%= form.label :time_zone, "時間帯" %><br>
    <%= form.select :time_zone, [
      "9時〜11時", "11時〜13時", "13時〜15時",
      "15時〜17時", "17時〜19時", "19時〜21時", "21時〜23時"
    ], { prompt: "選択してください" } %>
  </div>

  <!-- 送信ボタン -->
  <div class="actions">
    <%= form.submit "投稿する" %>
  </div>

<% end %>
