<!DOCTYPE html>
<html>
  <head>
    <title>sauna</title>
    <%= favicon_link_tag('favicon.ico') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- application.scss が main スタイル。Rails の再読み込み追跡付き -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <!-- Bootstrap CDN（JSも下で読み込むためCSSのみでOK） -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons CDN -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    >

    <%= javascript_importmap_tags %> 
  </head>

  <!-- controller名 + action名 を bodyクラスに付与（CSS切り替え用） -->
  <body class="<%= "#{controller_name}-#{action_name}" %>">
    <% if user_signed_in? %>
      <!-- ナビバー -->
      <nav class="navbar navbar-dark bg-dark px-3">
        <div class="container-fluid d-flex align-items-center justify-content-between">

          <!-- 左上：プロフィールアイコン -->
          <div class="d-flex align-items-center">
            <% if current_user.profile_image.attached? %>
              <%= link_to profile_user_path(current_user), class: "text-decoration-none" do %>
                <%= image_tag current_user.profile_image, 
                              class: "rounded-circle",
                              style: "width:40px; height:40px; object-fit:cover;" %>
              <% end %>
            <% else %>
              <!-- デフォルトアイコン（プレースホルダー） -->
              <%= link_to user_path(current_user), class: "text-decoration-none" do %>
                <div class="rounded-circle bg-secondary text-white d-flex justify-content-center align-items-center"
                     style="width:40px; height:40px; font-size:12px;">
                  P
                </div>
              <% end %>
            <% end %>
          </div>
          
          <!-- 右上：ログアウト＆メニュー -->
          <div class="d-flex align-items-center">
            <%= button_to "Logout", destroy_user_session_path,
                method: :delete,
                class: "btn btn-outline-light me-2",
                form: { style: "display:inline" } %>

            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasMenu"
                    aria-controls="offcanvasMenu">
              <span class="navbar-toggler-icon"></span>
            </button>
          </div>
        </div>
      </nav>

      <!-- オフキャンバスメニュー -->
      <div class="offcanvas offcanvas-end bg-dark text-white" tabindex="-1" id="offcanvasMenu">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title">メニュー</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <ul class="navbar-nav">
          <!-- フォロー中 -->
          <li class="nav-item mb-2">
           <%= link_to followings_user_path(current_user), class: "nav-link text-white" do %>
            <i class="bi bi-person-check me-2"></i> フォロー中
           <% end %>
          </li>
          </li>
          <!-- フォロワー -->
          <li class="nav-item mb-2">
           <%= link_to followers_user_path(current_user), class: "nav-link text-white" do %>
            <i class="bi bi-people me-2"></i> フォロワー
           <% end %>
          </li>
          <!-- プロフィール -->
          <li class="nav-item mb-2">
           <%= link_to profile_user_path(current_user), class: "nav-link text-white" do %>
             <i class="bi bi-person-circle me-2"></i> プロフィール
           <% end %>
          </li>
          <!-- 投稿一覧 -->
          <li class="nav-item mb-2">
            <%= link_to my_posts_posts_path, class: "nav-link text-white" do %>
              <i class="bi bi-journal-text me-2"></i> 投稿一覧
            <% end %>
          </li>
      <!-- お気に入り -->
      <li class="nav-item mb-2">
        <%= link_to favorites_path, class: "nav-link text-white" do %>
          <i class="bi bi-heart me-2"></i> お気に入り
        <% end %>
      </li>

      <!-- 下書き -->
      <li class="nav-item mb-2">
        <%= link_to drafts_posts_path, class: "nav-link text-white" do %>
          <i class="bi bi-file-earmark-text me-2"></i> 下書き
        <% end %>
      </li>

      <!-- How to Sauna -->
      <li class="nav-item mb-2">
        <%= link_to how_to_sauna_path, class: "nav-link text-white" do %>
          <i class="bi bi-fire me-2"></i> How to Sauna
        <% end %>
      </li>

      <!-- モラル -->
      <li class="nav-item mb-2">
        <%= link_to scenes_path, class: "nav-link text-white" do %>
          <i class="bi bi-exclamation-triangle me-2"></i> モラル
        <% end %>
      </li>

      <!-- マイページ -->
      <li class="nav-item mb-2">
        <%= link_to user_path(current_user), class: "nav-link text-white" do %>
          <i class="bi bi-house me-2"></i> マイページ
        <% end %>
      </li>
          </ul>
        </div>
      </div>
    <% end %>

    <!-- メインコンテンツ -->
    <main class="container mt-4">
      <%= yield %>
    </main>

    <!-- フローティングボタン -->
    <% if user_signed_in? %>
      <div class="floating-nav">
        <%= link_to user_path(current_user), class: "floating-btn" do %>
          <i class="bi bi-house-door-fill"></i>
        <% end %>

        <%= link_to favorites_path, class: "floating-btn" do %>
          <i class="bi bi-heart-fill"></i>
        <% end %>

        <%= link_to saunas_path, class: "floating-btn" do %>
          <i class="bi bi-search"></i>
        <% end %>

        <%# Sauna.first が存在しないとき "#" になる安全な書き方 %>
        <%= link_to (Sauna.first ? new_sauna_post_path(Sauna.first) : "#"), class: "floating-btn" do %>
          <i class="bi bi-plus-circle-fill"></i>
        <% end %>
 
      </div>
    <% end %>

    <!-- Bootstrap JS（Offcanvasなど動作用） -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
