<!DOCTYPE html>
<html>
  <head>
    <title>SaunaApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <%= javascript_importmap_tags %>
  
    <!-- ✅ Bootstrap Icons CDN -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    >
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-dark bg-dark px-3">
        <div class="container-fluid d-flex align-items-center justify-content-between">

          <!-- ✅ 左上：プロフィールアイコン（仮） -->
          <div class="d-flex align-items-center">
            <div class="rounded-circle bg-secondary text-white d-flex justify-content-center align-items-center"
                 style="width:40px; height:40px; font-size:12px;">
              <%= link_to "P", user_path(current_user), class: "text-white text-decoration-none" %>
            </div>
            <span class="ms-2 text-white">プロフィール</span>
          </div>

          <!-- ✅ 右側 -->
          <div class="d-flex align-items-center">
            <!-- ログアウトボタン -->
            <%= button_to "Logout", destroy_user_session_path,
                method: :delete,
                class: "btn btn-outline-light me-2",
                form: { style: "display:inline" } %>

            <!-- 三本線メニュー -->
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu">
              <span class="navbar-toggler-icon"></span>
            </button>
          </div>
        </div>
      </nav>

      <!-- ✅ オフキャンバスメニュー -->
      <div class="offcanvas offcanvas-end bg-dark text-white" tabindex="-1" id="offcanvasMenu">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title">メニュー</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <ul class="navbar-nav">
            <li class="nav-item">
              <span class="nav-link text-white">フォロー中</span>
            </li>
            <li class="nav-item">
              <span class="nav-link text-white">フォロワー</span>
            </li>
            <li class="nav-item">
              <span class="nav-link text-white">プロフィール</span>
            </li>
            <li class="nav-item">
              <%= link_to "投稿一覧", posts_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <span class="nav-link text-white">下書き</span>
            </li>
            <li class="nav-item">
              <span class="nav-link text-white">How to Sauna</span>
            </li>
            <li class="nav-item">
              <span class="nav-link text-white">モラル</span>
            </li>
            <li class="nav-item">
             <%= link_to "マイページ", user_path(current_user), class: "nav-link text-white" %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="container mt-4">
      <%= yield %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
