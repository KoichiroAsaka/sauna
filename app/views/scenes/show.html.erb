<div class="container mt-5 scene-detail-container no-bg">
  <div class="card scene-card shadow-lg p-4 border-0">

    <h3 class="text-center mb-4">🧘 みんなの意見</h3>

    <!-- シーン内容 -->
    <div class="scene-description text-center">
      <p class="fs-5 fw-bold text-dark"><%= simple_format(@scene.description) %></p>
    </div>

    <hr>

    <!-- 評価集計 -->
    <div class="mb-3 text-center">
      <h5 class="text-secondary"> 評価集計</h5>
      <p class="fs-6">
        <span class="text-success">Good：<%= @good_count %>件</span>
        <span class="text-danger">Bad：<%= @bad_count %>件</span>
      </p>
    </div>

    <hr>

    <!-- コメント一覧 -->
    <div class="mt-1 comment-list mx-auto">
      <h5 class="text-secondary mb-3 text-center">💬 コメント一覧</h5>

      <% if @comments.any? %>
        <% @comments.each do |comment| %>
          <div class="comment-item p-3 mb-3 rounded">
            <p class="fw-bold mb-1 text-dark"><%= comment.user.name %></p>
            <p class="text-dark mb-0"><%= simple_format(comment.content) %></p>
          </div>
        <% end %>
      <% else %>
        <p class="text-muted text-center">まだコメントはありません。</p>
      <% end %>
    </div>

    <div class="text-center mt-4">
      <%= link_to "戻る", scenes_path, class: "btn btn-outline-secondary" %>
    </div>

  </div>
</div>
